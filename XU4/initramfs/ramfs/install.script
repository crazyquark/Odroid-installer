#---------------------------------------------------------------------------------------------
change_android_fstab() {
    # Prepare fstab for changed partition layout
    if [ -f /mnt2/${1} ]; then
		if [ "${O_BOARD}" = "C2" ]; then
			# Change data partition number (4 -> 5)
			cat /mnt2/${1} | sed "s/\/dev\/block\/mmcblk0p4/\/dev\/block\/mmcblk0p5/g" > _fstab_
			cp _fstab_ /mnt2/${1}
			rm _fstab_
		else
			# Change data partition number (3 -> 5)
			cat /mnt2/${1} | sed "s/\/dev\/block\/mmcblk0p4/\/dev\/block\/mmcblk0p5/g" > _fstab_
			cp _fstab_ /mnt2/${1}
			rm _fstab_
			# Change cache partition number (4 -> 3)
			cat /mnt2/${1} | sed "s/\/dev\/block\/mmcblk0p4/\/dev\/block\/mmcblk0p3/g" > _fstab_
			cp _fstab_ /mnt2/${1}
			rm _fstab_
		fi
    fi
}
