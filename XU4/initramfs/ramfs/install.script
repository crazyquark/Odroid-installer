#!/bin/bash

# === Detect instalation source ===

echo "1 1 1 1" > /proc/sys/kernel/printk

mkdir /mnt > /dev/null 2>&1
mkdir /multiboot > /dev/null 2>&1
mkdir /run/inst > /dev/null 2>&1

#-------------------------------------------------------
print_header() {
    clear
    printf "\n"
    printf "\n"
    printf "\033[36m\033[1m\n"
	if [ "${O_BOARD}" = "C2" ]; then
		printf "    ======================================\n"
		printf "    = Odroid C2 Universal installer %s =\n" "${SCRIPT_VERSION}"
		printf "    ======================================\n"
	else
		printf "    ===========================================\n"
		printf "    = Odroid XU3/XU4 Universal installer %s =\n" "${SCRIPT_VERSION}"
		printf "    ===========================================\n"
	fi
    printf "\033[22m\033[37m\n"
}
#-------------------------------------------------------


print_header

# ** wait for sd/emmc card
while [ ! -b /dev/mmcblk0 ] && [ ! -b /dev/mmcblk1 ]
do
  printf "    Waiting for sd/mmc card...\r"
  sleep 1
done
sleep 1

export CARD1=""
export CARD2=""
export CARD1_EMMC=""
export CARD2_EMMC=""
export DEST_CARD=""
export DEST_EMMC=""
export SINGLE_CARD="yes"
export SOURCE_CARD=""
export INST_ANDROID=""
export INST_OELEC=""
export INST_LINUX=""
export INST_LINUX2=""
export A_FROMDIR=""
export L_FROMDIR=""
export L2_FROMDIR=""
export O_FROMDIR=""
export INST_DELAY=60
export SYSTEM_SIZE=1024
export SYSTEM_MINSIZE=768
export DATA_SIZE=1024
export DATA_MINSIZE=1024
export CACHE_SIZE=256
export CACHE_MINSIZE=128
export USERDATA_SIZE=1024
export USERDATA_MINSIZE=512
export LINUX_SIZE=2048
export LINUX_MINSIZE=2048
export LINUX2_SIZE=2048
export LINUX2_MINSIZE=2048
export OELEC_SIZE=512
export OELEC_MINSIZE=512
export LINUX_FSTYPE="ext4"

#-----------------------------------------------------
# Check card type
#----------------
if [ "${O_BOARD}" = "C2" ]; then
	# === On C2 the boot card is always /dev/mmcblk0 ===
	CARD1="/dev/mmcblk0"
	CARD1_EMMC="SD"
	if [ -b /dev/mmcblk1 ]; then
		SINGLE_CARD="no"
		CARD2="/dev/mmcblk1"
		CARD1_EMMC="EMMC"
		CARD2_EMMC="SD"
	fi
else
	# === On XU3/XU4 if the EMMC is present, it is /dev/mmcblk0 !! ===
	# === boot card can be /dev/mmcblk0 or /dev/mmcblk1 ===
	if [ -b /dev/mmcblk0 ]; then
		CARD1="/dev/mmcblk0"
		if [ -b /dev/mmcblk0boot0 ]; then
			CARD1_EMMC="EMMC"
		else
			CARD1_EMMC="SD"
		fi
	fi
	if [ -b /dev/mmcblk1 ]; then
		SINGLE_CARD="no"
		CARD2="/dev/mmcblk1"
		if [ -b /dev/mmcblk1boot0 ]; then
			CARD2_EMMC="EMMC"
		else
			CARD2_EMMC="SD"
		fi
	fi
fi
#-----------------------------------------------------


#-----------------------------------------------------
# Check where the installation files are located
check_source() {
	local _instfound="no"

    if [ -b ${1} ]; then
		/bin/mountx ${1} /mnt > /dev/null 2>&1
		[ $? -ne 0 ] && return 1
		SOURCE_CARD="${1}"
	else
		return 1
    fi
    sleep 1
    # === Source drive found and 1st partition mounted on /mnt ===

    # === Check installation files on source drive ===
    # ANDROID
    if [ -d /mnt/${BKP_PREFIX}_backup/android ]; then
		if [ -f /mnt/${BKP_PREFIX}_backup/android/system.raw.img ]; then
			INST_ANDROID="yes"
			_instfound="yes"
			A_FROMDIR="yes"
		fi
    else
		if [ -f /mnt/update.tar.gz ]; then
			INST_ANDROID="yes"
			_instfound="yes"
			if [ "${1}" = "/dev/mmcblk0p1" ] || [ "${1}" = "/dev/mmcblk1p1" ]; then
				return 0
			fi
		fi
	fi

    # LINUX
    if [ -d /mnt/${BKP_PREFIX}_backup/linux ]; then
		if [ -f /mnt/${BKP_PREFIX}_backup/linux/linux.img ]; then
			INST_LINUX="yes"
			_instfound="yes"
			L_FROMDIR="yes"
		fi
    else
		if [ -f /mnt/linux.img ]; then
			INST_LINUX="yes"
			_instfound="yes"
		fi
	fi

    # LINUX2
	if [ "${INST_LINUX}" = "yes" ]; then
		if [ -d /mnt/${BKP_PREFIX}_backup/linux2 ]; then
			if [ -f /mnt/${BKP_PREFIX}_backup/linux2/linux.img ]; then
				INST_LINUX2="yes"
				_instfound="yes"
				L2_FROMDIR="yes"
			fi
		else
			if [ -f /mnt/linux2.img ]; then
				INST_LINUX2="yes"
			fi
		fi
	fi

    if [ -d /mnt/${BKP_PREFIX}_backup/oelec/target ] && [ -d /mnt/${BKP_PREFIX}_backup/oelec/3rdparty ]; then
		INST_OELEC="yes"
		O_FROMDIR="yes"
    else
		if [ -f /mnt/oelec.tar ]; then
			INST_OELEC="yes"
		fi
	fi

	[ "${_instfound}" = "no" ] && return 1
    return 0
}
#-----------------------------------------------------

#----------------------------------------------------------------------------------------------------
exit_script() {
	local _delay=60
	local B="X"
	echo ""
	while [ $_delay -gt 0 ]; do
		printf "    \033[33mPress \033[1mE\033[22m to exit to main menu (%s)  \033[37m\r" "${_delay}"
		if read -n 1 -t 1 -s B; then
			_delay=60
			if [ "${B}" = "E" ] || [ "${B}" = "e" ]; then
				break
			elif [ "${B}" = "s" ]; then
				# SCREENSHOT ===
				fbcat > /install_exit.ppm
			fi
		else
			let _delay=_delay-1
		fi
	done

	printf "\r\033[2K"
	umount /mnt1 > /dev/null 2>&1
	umount /mnt2 > /dev/null 2>&1
	umount /mnt > /dev/null 2>&1
	exit 0
}
#----------------------------------------------------------------------------------------------------

print_header

# === Copy multiboot files ===
mount -t vfat ${BOOT_FROM}p1 /mnt > /dev/null 2>&1
if [ $? -ne 0 ]; then
	printf "    ERROR mounting boot card"
	exit_script
fi

cp /mnt/multiboot/*.multi /multiboot > /dev/null 2>&1
if [ $? -ne 0 ]; then
	printf "    ERROR copying multiboot files"
	exit_script
fi

umount /mnt > /dev/null 2>&1
if [ $? -ne 0 ]; then
	printf "    ERROR unmounting boot card"
	exit_script
fi
sleep 1

#=================================================
printf "    Searching for installation drive ... "

# === Set default dest card to sdcard if exists ===
DEST_CARD=${CARD1}
DEST_EMMC=${CARD1_EMMC}
if [ "${SINGLE_CARD}" = "no" ]; then
	if [ ! "${CARD2}" = "${BOOT_FROM}" ]; then
		DEST_CARD=${CARD2}
		DEST_EMMC=${CARD2_EMMC}
	fi
fi

check_source "/dev/sda1"
if [ $? -ne 0 ]; then
	check_source "/dev/sda2"
	if [ $? -ne 0 ]; then
		check_source "/dev/sda3"
		if [ $? -ne 0 ]; then
			check_source "/dev/sda4"
			if [ $? -ne 0 ]; then
				check_source "/dev/mmcblk0p1"
				if [ $? -ne 0 ]; then
					check_source "/dev/mmcblk1p1"
					if [ $? -ne 0 ]; then
						printf "    \033[33m\033[1mNOT FOUND\033[22m\033[37m\n"
						printf "    \033[33m\033[1mInstallation aborted.\033[22m\033[37m\n\n"
						exit_script
					fi
				fi
			fi
		fi
	fi
fi

if [ ! "${INST_ANDROID}" = "yes" ]; then
	SYSTEM_MINSIZE=8
	DATA_MINSIZE=8
	SYSTEM_SIZE=8
	DATA_SIZE=8
	CACHE_SIZE=8
	CACHE_MINSIZE=8
	USERDATA_MINSIZE=256
	USERDATA_SIZE=256
fi
if [ ! "${INST_OELEC}" = "yes" ]; then
	OELEC_MINSIZE=8
	OELEC_SIZE=512
fi
if [ ! "${INST_LINUX}" = "yes" ]; then
	LINUX_MINSIZE=8
	LINUX_SIZE=8
fi
if [ "${INST_LINUX2}" = "yes" ]; then
	let LINUX_MINSIZE=LINUX_MINSIZE+LINUX_MINSIZE
	let LINUX_SIZE=LINUX_SIZE+LINUX_SIZE
else
	LINUX2_MINSIZE=0
	LINUX2_SIZE=0
fi
#=================================================


#=================================================

if [ "${O_BOARD}" = "C2" ]; then
	part_start=65536       # RESERVE 32M AT CARD START
else
	part_start=131072      # RESERVE 64MB AT CARD START
fi

PARTSIZE_INC=128
export CARD_SIZE=8000
export ONLY_ANDROID="no"
export ONLY_LINUX="no"
export MULTI_BOOT="yes"
export source_mount="/mnt"
export TWO_CARDS="no"

rm /mnt/install.log > /dev/null 2>&1
log_file="/mnt/install.log"
#log_file="ls/dev/null"

#--------------------------------------------------------------------------------------------------------------------------------------
if [ "${INST_LINUX}" = "yes" ] && [ "${INST_ANDROID}" != "yes" ] && [ "${INST_OELEC}" != "yes" ] && [ "${INST_LINUX2}" != "yes" ]; then
	ONLY_LINUX="yes"
	MULTI_BOOT="no"
fi
if [ "${INST_ANDROID}" = "yes" ] && [ "${INST_LINUX}" != "yes" ] && [ "${INST_OELEC}" != "yes" ]; then
	ONLY_ANDROID="yes"
	MULTI_BOOT="no"
fi
if [ "${CARD1}" != "" ] && [ "${CARD1}" != "" ]; then
	TWO_CARDS="yes"
fi
#-----------------------------------------------------------------------------------------------------


#---------------------------------------------------------------------------------
# Detect and set installation card size, leave 32M at end unused
set_cardsize() {
	_card_sectno=`fdisk -l ${DEST_CARD} | grep "Disk ${DEST_CARD}" | awk '{print $7}'`
	CARD_SIZE=$(( ( $_card_sectno - $part_start - 65536 ) / 2048))
}
#---------------------------------------------------------------------------------


#--------------------------------------------------------------------------------------------------------
# Set linux or userdata partition size to fill card size
set_auto_partsize() {
    if [ "${INST_LINUX}" = "yes" ]; then
		LINUX_SIZE=$(( $CARD_SIZE - $USERDATA_SIZE - $SYSTEM_SIZE - $DATA_SIZE -$CACHE_SIZE - $OELEC_SIZE))
        if [ "${LINUX_SIZE}" -lt "${LINUX_MINSIZE}" ]; then
            LINUX_SIZE=${LINUX_MINSIZE}
            return 1
        else
            return 0
        fi
    else
		USERDATA_SIZE=$(( $CARD_SIZE - $SYSTEM_SIZE - $DATA_SIZE -$CACHE_SIZE - $OELEC_SIZE - $LINUX_SIZE))
        if [ "${USERDATA_SIZE}" -lt "${USERDATA_MINSIZE}" ]; then
            USERDATA_SIZE=${USERDATA_MINSIZE}
            return 1
        else
            return 0
        fi
    fi
}
#--------------------------------------------------------------------------------------------------------


